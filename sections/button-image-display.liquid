{%- comment -%}
  Section: Button Controlled Image Display
{%- endcomment -%}

<!-- HTML 结构 -->
<div class="spacing-style button-image-display-{{ section.id }} section section--page-width 
    {% if section.settings.device_hide %} device_hide {% endif %}
    {% if section.settings.mobile_device_hide %} mobile_device_hide {% endif %}" style="{% render 'spacing-style', settings: section.settings %}">

  <!-- 按钮导航区 -->
  <div class="button-image-display-button-nav-container">
    {% for block in section.blocks %}
      {% if block.type == 'image-item' %}
        <div class="button-image-display-button-wrapper">
          <button 
            class="button-image-display-nav-button {% if forloop.first %}active{% endif %}" 
            data-target="{{ block.id }}">
            {{ block.settings.title }}
          </button>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- 内容展示区 -->
  <div class="button-image-display-content-display-container" style="aspect-ratio: {{ section.settings.image_aspect_ratio }}">
    {% for block in section.blocks %}
      {% if block.type == 'image-item' %}
        <div 
          id="{{ block.id }}" 
          class="button-image-display-content-item {% if forloop.first %}active{% endif %}"
          style="display: {% if forloop.first %}block{% else %}none{% endif %};"
        >
            <img 
              src="{{ block.settings.image | img_url: '3840x' }}" 
              alt="{{ block.settings.title }}"
              class="button-image-display-display-image"
            />
        </div>
      {% endif %}
    {% endfor %}
  </div>

</div>

{% stylesheet %}

  .button-image-display-button-nav-container {
    display: flex;
    width: 100%;
    background-color: #F9F9F9;
    margin-bottom: 40px;
    border-radius: 5px;
  }

  .button-image-display-button-wrapper {
    flex: 1;
    text-align: center;
  }

  .button-image-display-nav-button {
    padding: 10px 20px;
    cursor: pointer;
    font-size: 24px;
    border: none;
    background-color: transparent;
    text-align: center;
  }

  .button-image-display-nav-button.active,
  .button-image-display-nav-button:hover {
    color: #47B92D;
  }

  .button-image-display-content-display-container {
    text-align: center;
  }

  .button-image-display-display-image {
    width: 100%;
    height: auto;
  }

  @media screen and (max-width: 750px) {
    .button-image-display-nav-button {
        font-size: 14px;
        padding: 10px;
    }
    .button-image-display-button-nav-container {
        margin-bottom: 20px;
    }
  }

{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const container = document.querySelector('.button-image-display-' + sectionId);
    if (!container) return;

    const navButtons = container.querySelectorAll('.button-image-display-nav-button');
    const contentItems = container.querySelectorAll('.button-image-display-content-item');

    navButtons.forEach(button => {
      // 点击事件 - 保留原有功能，设置为永久激活状态
      button.addEventListener('click', () => {
        // 移除所有按钮的active状态，然后给当前按钮添加active
        navButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
      });

      // 鼠标经过事件 - 切换内容和高亮
      button.addEventListener('mouseenter', () => {
        const targetId = button.getAttribute('data-target');
        
        // 移除所有按钮的active状态，给当前按钮添加active
        navButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // 显示对应的内容
        contentItems.forEach(item => item.style.display = 'none');
        const targetItem = container.querySelector('#' + targetId);
        if (targetItem) targetItem.style.display = 'block';
      });
    });
  });
</script>

