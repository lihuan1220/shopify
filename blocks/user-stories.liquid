{% stylesheet %}
  .user-stories-user-story-content {
    padding: 0 100px;
  }
  .user-stories-user-story-card {
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    overflow: hidden;
    background: white;
    width: 100%;
  }

  .user-stories-story-main-image {
    position: relative;
    width: 100%;
    height: 500px;
  }

  .user-stories-story-main-image:hover .user-stories-story-left-image {
    transform: rotate(0deg);
  }

  .user-stories-story-main-image:hover .user-stories-story-right-image {
    transform: rotate(0deg);
  }

  .user-stories-story-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-stories-story-left-image {
    width: 192px;
    height: 128px;
    position: absolute;
    right: 200px;
    bottom: -20px;
    border: 4px solid #ffffff;
    box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    transform: rotate(-5deg);
    transform-origin: center center;
    transition: transform 0.2s ease;
  }

  .user-stories-story-left-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-stories-story-right-image {
    width: 192px;
    height: 128px;
    position: absolute;
    right: 40px;
    bottom: -50px;
    border: 4px solid #ffffff;
    box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    transform: rotate(5deg);
    transform-origin: center center;
    transition: transform 0.2s ease;
  }

  .user-stories-story-right-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-stories-story-content-wrapper {
    display: flex;
    padding: 40px;
    gap: 30px;
    margin-top: 40px;
  }

  .user-stories-user-info-column {
    flex: 0 0 240px; /* 固定宽度，确保左侧列不会被挤压 */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    border-right: 1px solid #f3f4f6;
    padding-right: 20px;
  }

  .user-stories-user-header {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
  }

  .user-stories-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 2px solid #47B92D44;
  }

  .user-stories-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-stories-user-name {
    font-size: 16px;
    margin: 0;
  }

  .user-stories-user-title {
    font-size: 14px;
    color: #64748b;
    margin: 0;
  }

  .user-stories-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .user-stories-tag {
    background-color: #f1f5f9;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    color: #475569;
  }

  .user-stories-quote-and-summary-column {
    flex: 1; /* 让右侧区域占据剩余所有空间 */
    display: grid;
    gap: 20px;
  }

  .user-stories-quote {
    font-size: 24px;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
  }

  .user-stories-quote-subtext {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.5;
    color: #334155;
    padding-left: 20px;
    border-left: 4px solid #47B92D;
    margin: 0;
  }

  .user-stories-ai-summary {
    display: flex;
    background-color: #f0fdf4;
    padding: 20px;
    border-radius: 10px;
    border: 1px solid #47B92D;
    gap: 16px;
  }

  .user-stories-summary-left {
    flex-shrink: 0;
  }

  .user-stories-article-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 34px;
    height: 40px;
    background-color: #ffffff;
    border-radius: 50%;
  }
  .user-stories-article-icon-img {
    width: 18px;
    height: 16px;
  }

  .user-stories-summary-right {
    display: grid;
    gap: 10px;
  }

  .user-stories-summary-title {
    font-weight: 700;
    font-size: 14px;
    color: #47B92D;
    margin: 0;
  }
  .user-stories-summary-text {
    font-size: 14px;
    color: #334155;
    margin: 0;
  }

  .user-stories-short-description {
    font-size: 16px;
    color: #475569;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  /* 在文案底部添加向上渐隐的白色阴影 */
  .user-stories-short-description::after {
    content: '';
    position: absolute;
    bottom: 0px; /* 从文案底部开始向上延伸 */
    left: 0;
    width: 100%;
    height: 30px; /* 阴影高度 */
    /* 创建从透明到白色的渐变，模拟向上消失的效果 */
    background: linear-gradient(to top, white, transparent);
    pointer-events: none; /* 防止遮挡点击事件 */
    z-index: 2;
  }

  .user-stories-read-more-btn {
    display: inline-flex;
    background: none;
    border: none;
    color: #47B92D;
    font-weight: 700;
    cursor: pointer;
    padding: 0;
    font-size: 16px;
  }

  .user-stories-read-more-btn:hover {
    color: #47B92Ddd;
  }

  .user-stories-read-more-btn:hover .user-stories-arrow-icon {
    transform: translateX(4px);
  }

  .user-stories-arrow-icon {
    margin-left: 10px;
    width: 14px;
    height: auto;
    object-fit: contain;
    transition: transform 0.2s ease;
  }

  /* Modal Styles */
  .user-stories-modal {
    display: none;
    position: fixed;
    z-index: 1002;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
    justify-content: center;
    align-items: center;
  }

  .user-stories-modal-content-wrapper {
    background: white;
    position: relative; /* 为关闭按钮提供定位上下文 */
    width: 100%;
    max-width: 768px;
